---
import { Image } from "astro:assets";

const { post } = Astro.props;
console.log({post})
---

<article class="border-2 p-4">
  <a class="text-lg font-normal" href={`/blog/${post.id}`}>{post.data.title}</a>
  <p class="mb-5">
    <span class="font-normal">
      {post.author}
    </span>
    <span class="">
      {new Date(post.data.pubDate).toLocaleDateString()}
    </span>
  </p>
  <Image
    transition:name={`hero ${post.data.title} img`}
    transition:animate={"initial"}
    class="w-auto mx-auto h-72"
    alt=""
    src={post.data.cover}
  />
  <div class="dark:text-slate-300">{post.description}</div>
</article>
